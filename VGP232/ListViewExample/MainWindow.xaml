<Window x:Class="ListViewExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListViewExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="60">Name</TextBlock>
            <TextBox x:Name="TextName" Margin="10, 0" Width="200"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Width="60">Age</TextBlock>
            <TextBox x:Name="TextAge" Margin="10, 0" Width="200"></TextBox>
        </StackPanel>
        <Button x:Name="AddBtn" Click="AddBtn_Click">Add</Button>
        <!--<ListView x:Name="ListStuff">
        </ListView>-->
        <ListView x:Name="ListStuff" Height="100">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</Window>
