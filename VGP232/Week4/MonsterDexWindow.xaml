<Window x:Class="Week4.MonsterDexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week4"
        mc:Ignorable="d"
        Title="MonsterDexWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel>
            <Menu HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Width="auto">
                <MenuItem Header="File" Height="22" Width="100">
                    <MenuItem Header="Open" HorizontalAlignment="Left" Height="20" Width="140" Click="LoadClicked"/>
                    <MenuItem Header="Save" HorizontalAlignment="Left" Height="20" Width="140" Click="SaveClicked"/>
                    <MenuItem Header="Exit" HorizontalAlignment="Left" Height="20" Width="140"/>
                </MenuItem>
            </Menu>
            <ListBox x:Name="lbMonsters" Height="200" Width="200"/>
            <Button Content="Edit" Width="75" Click="EditClicked"/>
            <Button Content="Add" Width="75" Click="AddClicked"/>
            <Button Content="Remove" Width="75" Click="RemoveClicked"/>

        </StackPanel>

    </DockPanel>
</Window>
