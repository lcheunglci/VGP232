<UserControl x:Class="Week9.CharacterSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Week9"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListBox x:Name="characterList" HorizontalAlignment="Left" Height="135" Margin="20,66,0,0" VerticalAlignment="Top" Width="363">
            <ListBox.ItemTemplate>
                <ItemContainerTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding Face}"></Image>
                        <TextBlock Margin="10" Text="{Binding Name}"/>
                        <TextBlock Margin="10" Text="{Binding Dialogue}"></TextBlock>
                    </StackPanel>
                </ItemContainerTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Margin="41,23,0,0" TextWrapping="Wrap" Text="Character Selection" VerticalAlignment="Top"/>


    </Grid>
</UserControl>
