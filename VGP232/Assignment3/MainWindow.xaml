<Window x:Class="Assignment3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3"
        mc:Ignorable="d"
        Title="SpriteSheet Generator" Height="450" Width="800">
    <Grid>
        <Button Content="Generate" HorizontalAlignment="Left" Margin="628,235,0,0" VerticalAlignment="Top" Width="74" Click="GenerateButtonPressed"/>
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="146,235,0,0" VerticalAlignment="Top" Width="338" HorizontalScrollBarVisibility="Auto">
            <Image x:Name="previewImage" Height="100" Width="268"/>
        </ScrollViewer>
        <Button Content="Browse..." HorizontalAlignment="Left" Margin="629,196,0,0" VerticalAlignment="Top" Width="75" Click="BrowseButtonPressed"/>
        <TextBlock x:Name="selectedFolder" HorizontalAlignment="Left" Margin="340,70,0,0" TextWrapping="Wrap" Text="Selected Folder" VerticalAlignment="Top"/>
        <Button Content="Show" HorizontalAlignment="Left" Margin="628,274,0,0" VerticalAlignment="Top" Width="76" Click="ShowButtonPressed"/>
        <Button Content="Find" HorizontalAlignment="Left" Margin="629,315,0,0" VerticalAlignment="Top" Width="75" Click="FindButtonPressed"/>

    </Grid>
</Window>
