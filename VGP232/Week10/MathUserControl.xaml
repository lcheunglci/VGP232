<UserControl x:Class="Week10.MathUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Week10"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Button Content="Sum" Style="{StaticResource ResourceKey=StylishBigBtn}" HorizontalAlignment="Left" Margin="130,75,0,0" VerticalAlignment="Top" Click="Sum_Click"/>
        <TextBox Style="{DynamicResource NumberStyle}" HorizontalAlignment="Left" Margin="70,16,0,0" Text="{Binding Left}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Style="{DynamicResource NumberStyle}" HorizontalAlignment="Left" Margin="70,39,0,0" Text="{Binding Right}" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Style="{StaticResource ClearText}" HorizontalAlignment="Left" Margin="10,16,0,0" Text="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Style="{StaticResource ClearText}" HorizontalAlignment="Left" Margin="10,41,0,0" Text="Right" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
