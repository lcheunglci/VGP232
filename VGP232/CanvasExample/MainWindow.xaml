<Window x:Class="CanvasExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CanvasExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Canvas Drop="MoveToMouse">
        <Rectangle x:Name="myRect" Height="100" Canvas.Left="223" Canvas.Top="152" Width="100" Fill="Black" Stroke="#FFFD6969"/>
        <Button x:Name="loadButton" Click="loadSprite" Content="Load Sprite" Canvas.Left="10" Canvas.Top="10" Width="75"/>
        <Image x:Name="myImage" Height="100" Canvas.Left="470" Canvas.Top="152" Width="100" MouseMove="MyImage_MouseMove" MouseLeftButtonDown="MyImage_MouseLeftButtonDown"/>
    </Canvas>
</Window>
